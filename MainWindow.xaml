<Window x:Class="GAG_Proc_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace=GAG_Proc_Generator"
        mc:Ignorable="d"
        Title="SQL Stored Procedure Generator" Height="700" Width="1200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Table Name Input -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Table Name:" VerticalAlignment="Center" Width="100"/>
            <ComboBox ItemsSource="{Binding Tables}" SelectedItem="{Binding TableName}" Width="200" Margin="0,0,10,0"/>
            <Button Content="Connect to Database" Command="{Binding OpenConnectionDialogCommand}" Padding="10,5" Margin="0,0,10,0"/>
            <Button Content="Load Table" Command="{Binding LoadTableCommand}" Padding="10,5"/>
        </StackPanel>

        <!-- Header Information -->
        <GroupBox Header="Header Information" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Initials:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Initials}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>
                <TextBlock Text="Story Number:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding StoryNumber}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>
                <TextBlock Text="Description:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Description}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Columns and FKs Display -->
        <GroupBox Header="Table Schema" Grid.Row="2" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Columns" Grid.Column="0" Margin="0,0,5,0">
                    <ListView ItemsSource="{Binding Columns}" Height="150">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="120"/>
                                <GridViewColumn Header="Data Type" DisplayMemberBinding="{Binding DataType}" Width="100"/>
                                <GridViewColumn Header="Nullable" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding IsNullable}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Primary Key" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding IsPrimaryKey}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
                <GroupBox Header="Foreign Keys" Grid.Column="1" Margin="5,0,0,0">
                    <ListView ItemsSource="{Binding ForeignKeys}" Height="150">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="FK Name" DisplayMemberBinding="{Binding ForeignKeyName}" Width="120"/>
                                <GridViewColumn Header="Column" DisplayMemberBinding="{Binding ColumnName}" Width="100"/>
                                <GridViewColumn Header="Ref Table" DisplayMemberBinding="{Binding ReferencedTable}" Width="100"/>
                                <GridViewColumn Header="Ref Column" DisplayMemberBinding="{Binding ReferencedColumn}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </Grid>
        </GroupBox>

        <!-- Tabs for Procedures -->
        <TabControl Grid.Row="3" Margin="0,0,0,10">
            <TabItem Header="GetAll">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Select Attributes" Grid.Row="0" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding Columns}" Height="100">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Select" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <GroupBox Header="Select Foreign Keys" Grid.Row="1" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding ForeignKeys}" Height="100">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Select" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="FK Name" DisplayMemberBinding="{Binding ForeignKeyName}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <Button Content="Generate GetAll" Command="{Binding GenerateGetAllCommand}" Grid.Row="2" Padding="10,5" HorizontalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="GetByAttributes">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Select Attributes for Filtering" Grid.Row="0" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding Columns}" Height="100">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Select" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <GroupBox Header="Select Foreign Keys" Grid.Row="1" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding ForeignKeys}" Height="100">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Select" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="FK Name" DisplayMemberBinding="{Binding ForeignKeyName}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <Button Content="Generate GetByAttributes" Command="{Binding GenerateGetByAttributesCommand}" Grid.Row="2" Padding="10,5" HorizontalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Delete">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Select Attributes" Grid.Row="0" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding Columns}" Height="100">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Select" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <GroupBox Header="Select Foreign Keys" Grid.Row="1" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding ForeignKeys}" Height="100">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Select" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="FK Name" DisplayMemberBinding="{Binding ForeignKeyName}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <Button Content="Generate Delete" Command="{Binding GenerateDeleteCommand}" Grid.Row="2" Padding="10,5" HorizontalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Save">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Select Attributes" Grid.Row="0" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding Columns}" Height="100">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Select" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <GroupBox Header="Select Foreign Keys" Grid.Row="1" Margin="0,0,0,10">
                            <ListView ItemsSource="{Binding ForeignKeys}" Height="100">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Select" Width="50">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="FK Name" DisplayMemberBinding="{Binding ForeignKeyName}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <Button Content="Generate Save" Command="{Binding GenerateSaveCommand}" Grid.Row="2" Padding="10,5" HorizontalAlignment="Center"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Generated SQL -->
        <GroupBox Header="Generated SQL" Grid.Row="4">
            <TextBox Text="{Binding GeneratedSql}" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"/>
        </GroupBox>
    </Grid>
</Window>